            "items": {
              "type": "string",
              "example": "5f9f8b4b1c9d440000d3b3b5"
            }
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ingredient": {
                  "type": "string",
                  "example": "Gin"
                },
                "measure": {
                  "type": "string",
                  "example": "2 oz"
