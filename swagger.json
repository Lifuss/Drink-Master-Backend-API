    "/drinks/search": {
      "get": {
        "tags": ["Drinks"],
        "summary": "Search cocktails by name",
        "description": "If user is not adult, he can't see alcoholic drinks, there are not required parameters",
        "operationId": "search",
        "parameters": [
          {
            "name": "drink",
            "in": "query",
            "description": "drink name",
            "schema": {
              "type": "string",
              "example": "Quentin"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "category name",
            "schema": {
              "type": "string",
              "example": "Ordinary Drink"
            }
          },
          {
            "name": "ingredients",
            "in": "query",
            "description": "ingredients name(can be more than one separated by comma)",
            "schema": {
              "type": "string",
              "example": "Gin"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "page number",
            "schema": {
              "type": "string",
              "example": "1",
              "default": "1"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "limit of drinks per page",
            "schema": {
              "type": "string",
              "example": "12",
              "default": "12"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DrinkItem"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
